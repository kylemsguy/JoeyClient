<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btnBurnROM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="388dp"
            android:text="Burn ROM"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/btnDumpROM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="156dp"
            android:text="Dump ROM"
            app:layout_constraintBottom_toTopOf="@+id/btnBurnSRAM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="JoeyJoebags Detected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartDataView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="132dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="133dp"/>
    <Button
            android:text="Dump SRAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDumpSRAM" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="153dp" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/btnBurnSRAM"/>
    <Button
            android:text="Burn SRAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBurnSRAM" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="153dp" android:layout_marginBottom="242dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
